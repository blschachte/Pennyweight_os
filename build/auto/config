#!/bin/sh
lb config noauto \
	-a amd64 \
	--color \
	--mode debian \
	-d testing \
	--archive-areas main contrib non-free \
	--image-name pennyweight-linux \
	--iso-application Pennyweight GNU/Linux \
	--iso-publisher Pennyweight Project \
	--iso-volume Pennyweight testing 3/5/2023 \
	-b iso-hybrid \
	--apt-recommends false
	"${@}"
